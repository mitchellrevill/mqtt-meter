{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Infrastructure.Mqtt": "Information"
    }
  },
  "AllowedHosts": "*",
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 1883,
    "AmqpPort": 5672,
    "Username": "admin",
    "Password": "admin",
    "VirtualHost": "/",
    "UseSsl": false,
    "ClientIdPrefix": "mqtt-meter",
    "ConnectionTimeout": 30,
    "KeepAliveInterval": 60,
    "ReconnectDelay": 5,
    "EnableSharedSubscriptions": true,
    "SharedSubscriptionGroup": "mqtt-meter-group"
  },
  "MqttTopics": {
    "ReadingsBaseTopic": "meters/readings",
    "ClientStatusTopic": "meters/clients/status",
    "CommandTopic": "meters/commands",
    "AlertTopic": "meters/alerts"
  }
}
